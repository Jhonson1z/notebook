{
  "github": {
    "release": false
  },
  "git": {
    "commitMessage": "release: v${version}",
    "commit": true,
    "push": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "echo notebook更新版本成功"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
